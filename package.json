{
  "name": "vivid",
  "private": true,
  "version": "1.0.0",
  "description": "Vivid",
  "repository": "",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production vite build",
    "build-cordova": "cross-env TARGET=cordova cross-env NODE_ENV=production vite build && node ./build/build-cordova.js && cd cordova && npx cordova build",
    "postinstall": "cpy --flat ./node_modules/framework7-icons/fonts/*.* ./src/fonts/ && cpy --flat ./node_modules/material-icons/iconfont/*.* ./src/fonts/",
    "emulate": "cd cordova && npx cordova run --emulator",
    "install-cordova-dev": "cd cordova && npm install && npx cordova platform add android"
  },
  "browserslist": [
    "IOS >= 13",
    "Safari >= 13",
    "last 5 Chrome versions",
    "last 5 Firefox versions",
    "Samsung >= 12"
  ],
  "dependencies": {
    "dom7": "^4.0.4",
    "framework7": "^7.0.8",
    "framework7-icons": "^5.0.5",
    "jquery": "^3.6.1",
    "material-icons": "^1.12.0",
    "skeleton-elements": "^4.0.1",
    "sortablejs": "^1.15.0",
    "swiper": "^8.4.4"
  },
  "devDependencies": {
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "jquery-sortablejs": "^1.0.1",
    "less": "^4.1.3",
    "postcss-preset-env": "^7.8.2",
    "rollup": "^3.2.3",
    "rollup-plugin-framework7": "^1.2.1",
    "vite": "^3.1.8",
    "vite-plugin-html": "^3.2.0"
  }
}
